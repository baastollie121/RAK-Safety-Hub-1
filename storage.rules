rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if a user is an admin
    function isAdmin() {
      return request.auth.token.role == 'admin';
    }

    // Admins can read and write all files
    match /{allPaths=**} {
      allow read, write: if isAdmin();
    }
    
    // Client-specific files:
    // Clients can read files within their own folder.
    // They cannot write directly; uploads should be handled by a secure backend function.
    match /clients/{userId}/{allPaths=**} {
      allow read: if request.auth.uid == userId;
      allow write: if false; // Disallow direct client uploads for security
    }
    
    // General documents (e.g., templates) can be read by any authenticated user
    match /documents/{allPaths=**} {
        allow read: if request.auth != null;
        allow write: if isAdmin();
    }
  }
}
