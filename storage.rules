
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    function isAdmin() {
      return request.auth.token.role == 'admin';
    }
    
    // Admins have full access to all files
    match /{allPaths=**} {
      allow read, write: if isAdmin();
    }

    // Client-specific document folders
    // Each client can read and write files ONLY within their own folder.
    match /clients/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Document library for all users to read from
    match /documents/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
  }
}
