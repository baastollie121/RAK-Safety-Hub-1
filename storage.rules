rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
  
    // Helper function to check for admin role
    function isAdmin() {
      return request.auth.token.role == 'admin';
    }

    // Helper function to check if the user is the owner of the client directory
    function isClientOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Admins have full read/write access to everything in the bucket.
    match /{allPaths=**} {
      allow read, write: if isAdmin();
    }
    
    // --- Client-specific folders ---
    // Clients can read, write, and delete files only within their own dedicated folder.
    // The path is structured as 'clients/{userId}/...'
    match /clients/{userId}/{allPaths=**} {
      allow read, write: if isClientOwner(userId);
    }
    
    // --- Public read for specific assets if needed (example) ---
    // match /public/{allPaths=**} {
    //   allow read;
    // }
  }
}
