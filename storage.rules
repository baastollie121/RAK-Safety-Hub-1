
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow clients to upload to their own folder.
    // The client's UID must match the folder name in the 'clients' directory.
    match /clients/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow admins to manage all documents.
    // This gives read/write access to the entire 'documents' folder for any user with an 'admin' custom claim.
    match /documents/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.token.role == 'admin';
    }
  }
}
