rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Admins have full read/write access to all files.
    match /{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.token.role == 'admin';
    }

    // Authenticated clients can only read files within their own directory.
    // They cannot write or delete files.
    match /clients/{userId}/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
    }

    // General document library should be readable by all authenticated clients.
    // This assumes a general library path outside of specific client folders.
    match /documents/{allPaths=**} {
        allow read: if request.auth != null;
    }
  }
}
