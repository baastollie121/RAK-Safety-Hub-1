rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read/write access to the documents folder for any authenticated user
    match /documents/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // You can add other rules for other paths here
    // For example, if you had user-specific profile pictures:
    // match /users/{userId}/{allPaths=**} {
    //   allow read, write: if request.auth != null && request.auth.uid == userId;
    // }
  }
}
