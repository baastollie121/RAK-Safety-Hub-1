rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth.token.role == 'admin';
    }

    function isClient() {
      return request.auth.token.role == 'client';
    }
    
    // User profile data
    match /users/{userId} {
      // Admins can see all user profiles.
      // Clients can only see their own profile.
      allow read: if isAdmin() || (isClient() && request.auth.uid == userId);
      // Only admins (via cloud function) can create users or update roles.
      allow write: if isAdmin();
    }

    // Chat conversations
    match /chats/{userId} {
        // Admins can read/write to any chat document metadata
        // Clients can read/write to their own chat document metadata
        allow read, write: if isAdmin() || (isClient() && request.auth.uid == userId);
        
        // Messages subcollection
        match /messages/{messageId} {
            // Admins can read any message in any chat.
            // Clients can only read messages in their own chat.
            allow read: if isAdmin() || (isClient() && request.auth.uid == userId);
            
            // Admins can write (send messages) to any chat.
            // Clients can only write messages to their own chat.
            allow write: if isAdmin() || (isClient() && request.auth.uid == userId);
        }
    }

    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}