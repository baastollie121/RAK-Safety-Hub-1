rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAdmin() {
      return request.auth.token.role == 'admin';
    }

    function isClient() {
      return request.auth.token.role == 'client';
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Admins can read and write all documents
    match /{document=**} {
      allow read, write: if isAdmin();
    }
    
    // Users collection rules
    match /users/{userId} {
      // Clients can read their own profile data
      allow get: if isOwner(userId);
      // Admins can manage all user profiles (covered by admin rule above)
    }

    // Notifications collection
    match /notifications/{notificationId} {
        // Clients can read notifications intended for them
        allow get: if isClient() && resource.data.clientUid == request.auth.uid;
        allow list: if isClient();
        allow update: if isClient() && isOwner(resource.data.clientUid); // For marking as read
    }
    
    // Add other collection rules here as needed
  }
}
