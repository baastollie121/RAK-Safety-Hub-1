
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Admins can read/write any document
    function isAdmin() {
      return request.auth.token.role == 'admin';
    }

    // A user can read/write to their own document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Allow users to read/write their own user data
    match /users/{userId} {
      allow get: if request.auth != null; // Any authenticated user can read user profiles
      allow list: if isAdmin(); // Only admins can list all users
      allow create, update, delete: if isAdmin(); // Only admins can manage user docs
    }

    // Rules for the chat collection
    match /chats/{userId}/{document=**} {
      allow read, write: if isAdmin() || isOwner(userId);
    }
  }
}
