rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAdmin() {
      return request.auth.token.role == 'admin';
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Admins have full access to everything
    match /{document=**} {
      allow read, write: if isAdmin();
    }

    // Users can read their own user document
    match /users/{userId} {
      allow read: if isOwner(userId);
      // create/update rules are handled by cloud functions for security
    }

    // Rules for chat/messaging
    match /chats/{userId}/{document=**} {
        allow read, write: if isOwner(userId) || isAdmin();
    }
    
    // Notifications can be read by the owner client, created by functions (or admins)
    match /notifications/{notificationId} {
        allow read: if request.auth.uid == resource.data.clientUid;
        allow create: if isAdmin();
        allow update: if isOwner(resource.data.clientUid); // For marking as read
    }

    // Any other collection is locked down for clients unless specified
    // Example for a hypothetical "clientData" collection
    match /clientData/{clientId}/{document=**} {
        allow read, write: if isOwner(clientId);
    }
  }
}
